{
  "extends": "airbnb-base",
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.test.jsx"
      ],
      "env": {
        "jest": true
      }
    }
  ],
  "rules": {
    "linebreak-style": 0,
    "max-len": [
      "warn",
      150
    ],
    "no-console": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "eol-last": "warn",
    "indent": ["warn", 2],
    "no-await-in-loop": "off",
    "radix": "off",
    "no-undef": "warn",
    "no-loop-func": "off",
    "arrow-body-style": "off",
    "no-continue": "off",
    "camelcase": "off",
    "no-useless-catch": "off",
    "no-underscore-dangle": "off",
    "no-eval": "warn"
  }
}
